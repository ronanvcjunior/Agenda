<%- include('./includes/head') %>

<%- include('./includes/navbar') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos est√£o abaixo</p>

      <%- include('./includes/messages') %>

      <div class="resposive-table">
        <table class="table my-3">
          <% contatos.forEach(contato => { %>
            <tr>
              <td><%= contato.name %></td>
              <td><%= contato.lastname %></td>
              <td><%= contato.phone %></td>
              <td><%= contato.email %></td>
              <td><a href="/contato/<%= contato._id %>">Editar</a></td>
              <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
            </tr>
          <% }) %>
        </table>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('./includes/footer') %>